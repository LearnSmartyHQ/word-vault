  "definitions": [
    {
      "senseNumber": 1,
      "definition": "to take and then let out a long deep breath that can be heard, to show that you are disappointed, sad, tired, etc.",
      "sensetop": "sigh with something",
      "cefr": "c1",
      "examples": [
        {
          "text": "He **sighed deeply** at the thought."
        },
        {
          "text": "She **sighed with relief** that it was all over.",
          "contextForm": "sigh with something"
        },
        {
          "text": "He sighed wearily as he looked at the pile of work."
        },
        {
          "text": "She looked at her son and sighed happily."
        },
        {
          "text": "She sighed heavily and sat down."
        },
        {
          "text": "The girl watching him sighed dreamily."
        },
        {
          "text": "He sighed in exasperation."
        }
      ],
      "topics": ["Feelings"],
      "collocations": {
        "adverb": ["deeply", "heavily", "softly"],
        "preposition": ["in", "with"]
      }
    },
    {
      "senseNumber": 2,
      "definition": "to say something with a sigh",
      "sensetop": "+ speech",
      "cefr": "c1",
      "examples": [
        {
          "text": "‘Oh well, better luck next time,’ she sighed."
        }
      ]
    },
    {
      "senseNumber": 3,
      "definition": "to make a long sound like a sigh",
      "labels": "(literary)",
      "examples": [
        {
          "text": "the sighing of the wind through the trees"
        },
        {
          "text": "branches sighing in the wind"
        }
      ]
    }
  ],
