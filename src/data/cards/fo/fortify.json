  "definitions": [
    {
      "senseNumber": 1,
      "definition": "to make a place more able to resist attack, especially by building high walls",
      "sensetop": "fortify something (against somebody/something)",
      "examples": [
        {
          "text": "a fortified town"
        },
        {
          "text": "They fortified the area against attack."
        }
      ]
    },
    {
      "senseNumber": 2,
      "definition": "to make somebody/yourself feel stronger, braver, etc.",
      "sensetop": "fortify somebody/yourself (against somebody/something)",
      "examples": [
        {
          "text": "He fortified himself against the cold with a hot drink."
        },
        {
          "text": "Although fortified by its election success, the government remains cautious in its policies."
        }
      ]
    },
    {
      "senseNumber": 3,
      "definition": "to make a feeling or an attitude stronger",
      "examples": [
        {
          "text": "The news merely fortified their determination."
        }
      ]
    },
    {
      "senseNumber": 4,
      "definition": "to increase the strength or quality of food or drink by adding something to it",
      "sensetop": "(be) fortified(be) fortified with something",
      "examples": [
        {
          "text": "Sherry is **fortified wine** *(= wine with extra alcohol added)*.",
          "contextForm": "(be) fortified"
        },
        {
          "text": "cereal fortified with extra vitamins",
          "contextForm": "(be) fortified with something"
        }
      ]
    }
  ],
