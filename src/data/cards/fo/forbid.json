	"definitions": [
		{
			"senseNumber": 1,
			"definition": "to order somebody not to do something; to order that something must not be done",
			"sensetop": "forbid somebody (from doing something)forbid somethingforbid somebody to do somethingforbid somebody somethingforbid (somebody) doing something",
			"cefr": "b2",
			"examples": [
				{
					"text": "He forbade them from mentioning the subject again.",
					"contextForm": "forbid somebody (from doing something)"
				},
				{
					"text": "Her father forbade the marriage.",
					"contextForm": "forbid something"
				},
				{
					"text": "Smoking is strictly forbidden."
				},
				{
					"text": "You cannot do that. I absolutely forbid it."
				},
				{
					"text": "You are all forbidden to leave.",
					"contextForm": "forbid somebody to do something"
				},
				{
					"text": "My doctor has forbidden me sugar.",
					"contextForm": "forbid somebody something"
				},
				{
					"text": "She knew her mother would forbid her going.",
					"contextForm": "forbid (somebody) doing something"
				}
			],
			"topics": ["Permission and obligation"],
			"collocations": {
				"adverb": ["strictly", "absolutely", "totally"],
				"preposition": ["from"],
				"phrases": ["be forbidden by law"]
			}
		},
		{
			"senseNumber": 2,
			"definition": "to make it difficult or impossible to do something",
			"sensetop": "forbid somethingforbid somebody to do something",
			"labels": "(formal)",
			"examples": [
				{
					"text": "Lack of space forbids further treatment of the topic here."
				}
			],
			"synonyms": "prohibit"
		},
		{
			"senseNumber": null,
			"definition": "used to say that you hope that something will not happen",
			"labels": "(informal)",
			"examples": [
				{
					"text": "‘Maybe you'll end up as a lawyer, like me.’ ‘God forbid!’"
				}
			]
		}
