	"definitions": [
		{
			"senseNumber": 1,
			"definition": "to make something happen suddenly",
			"sensetop": "trigger something (off)",
			"cefr": "b2",
			"examples": [
				{
					"text": "Nuts can trigger off a violent allergic reaction."
				},
				{
					"text": "The incident triggered protests across the country."
				},
				{
					"text": "A wide range of emotionally stressful events may trigger a relapse."
				},
				{
					"text": "Her case triggered a wave of support around the world."
				},
				{
					"text": "Even the smell of oranges can trigger her migraine."
				},
				{
					"text": "He has a brain disorder that can trigger off convulsive fits."
				}
			],
			"synonyms": "set off, set something  off",
			"topics": ["Change, cause and effect"]
		},
		{
			"senseNumber": 2,
			"definition": "to cause a device to start functioning",
			"sensetop": "trigger something",
			"cefr": "b2",
			"examples": [
				{
					"text": "to trigger an alarm"
				}
			]
		},
		{
			"senseNumber": 3,
			"definition": "to make somebody feel very upset or anxious by reminding them of a trauma or bad experience",
			"sensetop": "trigger somebody",
			"cefr": "c2",
			"examples": [
				{
					"text": "Sometimes, the slightest things trigger me because they remind me of my mum."
				}
			],
			"topics": ["Feelings"]
		}
	],
