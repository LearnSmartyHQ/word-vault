	"definitions": [
		{
			"senseNumber": 1,
			"definition": "to make something, especially somebody’s confidence or authority, gradually weaker or less effective",
			"sensetop": "undermine something/somebody",
			"cefr": "c1",
			"examples": [
				{
					"text": "Our confidence in the team has been seriously undermined by their recent defeats."
				},
				{
					"text": "This crisis has undermined his position."
				},
				{
					"text": "Recent changes have undermined teachers’ morale."
				},
				{
					"text": "The director saw this move as an attempt to undermine his authority."
				},
				{
					"text": "It's all a plot to undermine me."
				}
			],
			"collocations": {
				"adverb": ["greatly", "radically", "seriously"],
				"verb + undermine": ["threaten to", "attempt to", "seek to"]
			}
		},
		{
			"senseNumber": 2,
			"definition": "to make something weaker at the base, for example by digging under it",
			"sensetop": "undermine something",
			"examples": []
		}
	],
