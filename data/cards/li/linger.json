  "definitions": [
    {
      "senseNumber": 1,
      "definition": "to continue to exist for longer than expected",
      "sensetop": "linger on",
      "cefr": "c1",
      "examples": [
        {
          "text": "The faint smell of her perfume lingered in the room."
        },
        {
          "text": "The civil war lingered on well into the 1930s.",
          "contextForm": "linger on"
        },
        {
          "text": "It will linger forever in the minds of many people."
        },
        {
          "text": "The feelings of hurt and resentment lingered on for years."
        }
      ],
      "collocations": {
        "adverb": ["long", "still", "forever"],
        "preposition": ["on", "over"]
      }
    },
    {
      "senseNumber": 2,
      "definition": "to stay somewhere for longer because you do not want to leave; to spend a long time doing something",
      "sensetop": "(+ adv./prep.)",
      "cefr": "c1",
      "examples": [
        {
          "text": "She lingered for a few minutes to talk to Nick."
        },
        {
          "text": "We lingered over breakfast on the terrace."
        }
      ],
      "collocations": {
        "adverb": ["long", "still", "forever"],
        "preposition": ["on", "over"]
      }
    },
    {
      "senseNumber": 3,
      "definition": "to continue to look at somebody/something or think about something for longer than usual",
      "sensetop": "linger (on somebody/something)",
      "examples": [
        {
          "text": "His eyes lingered on the diamond ring on her finger."
        }
      ],
      "collocations": {
        "adverb": ["long", "still", "forever"],
        "preposition": ["on", "over"]
      }
    },
    {
      "senseNumber": 4,
      "definition": "to stay alive but become weaker",
      "sensetop": "linger (on)",
      "examples": [
        {
          "text": "He lingered on for several months after the heart attack."
        }
      ],
      "collocations": {
        "adverb": ["long", "still", "forever"],
        "preposition": ["on", "over"]
      }
    }
  ],
