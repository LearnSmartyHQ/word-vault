  "definitions": [
    {
      "senseNumber": "1",
      "definition": "to be the reason why somebody does something or behaves in a particular way",
      "sensetop": "motivate somebody (to do something)be motivated by something",
      "cefr": "b2",
      "examples": [
        {
          "text": "What motivates people to carry out such attacks?",
          "contextForm": "motivate somebody (to do something)"
        },
        {
          "text": "He is motivated entirely by self-interest.",
          "contextForm": "be motivated by something"
        },
        {
          "text": "He was motivated to join the union because he objected to the new contract."
        },
        {
          "text": "We created the conditions whereby the child is motivated to speak."
        }
      ]
    },
    {
      "senseNumber": "2",
      "definition": "to make somebody want to do something, especially something that involves hard work and effort",
      "sensetop": "motivate somebodymotivate somebody to do something",
      "cefr": "b2",
      "examples": [
        {
          "text": "She's very good at motivating her students.",
          "contextForm": "motivate somebody"
        },
        {
          "text": "His greatest quality is the way he motivates his team."
        },
        {
          "text": "The plan is designed to motivate employees to work more efficiently.",
          "contextForm": "motivate somebody to do something"
        }
      ],
      "topics": ["Personal qualities"]
    },
    {
      "senseNumber": "3",
      "definition": "to give reasons for something that you have stated",
      "sensetop": "motivate something",
      "labels": "(South African English, formal)",
      "examples": [
