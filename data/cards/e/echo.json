  "definitions": [
    {
      "senseNumber": "1",
      "definition": "if a sound echoes, it is reflected off a wall, the side of a mountain, etc. so that you can hear it again",
      "cefr": "c1",
      "examples": [
        {
          "text": "Her footsteps echoed in the empty room."
        },
        {
          "text": "The gunshot echoed through the forest."
        },
        {
          "text": "His voice echoed around the room."
        },
        {
          "text": "The call echoed off the walls of the cave."
        },
        {
          "text": "Their voices echoed back across the water."
        },
        {
          "text": "The protest seemed to echo across the room."
        },
        {
          "text": "Her screams still echoed in his ears."
        }
      ],
      "synonyms": "reverberate",
      "collocations": {
        "adverb": ["faintly", "slightly", "softly"],
        "verb + echo": ["seem to"],
        "preposition": ["across", "around", "round"]
      }
    },
