  "definitions": [
    {
      "senseNumber": 1,
      "definition": "to discuss something with somebody, in order to exchange opinions or get advice",
      "sensetop": "confer (with somebody) (on/about something)",
      "cefr": "c1",
      "examples": [
        {
          "text": "He wanted to confer with his colleagues before reaching a decision."
        }
      ],
      "topics": ["Opinion and argument"]
    },
    {
      "senseNumber": 2,
      "definition": "to give somebody an award, a university degree or a particular honour or right",
      "sensetop": "confer something (on/upon somebody)",
      "cefr": "c1",
      "examples": [
        {
          "text": "An honorary degree was conferred on him by Oxford University in 2019."
        }
      ],
      "topics": ["Education"]
    }
  ],
